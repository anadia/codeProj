                                    <th>Usuario</th>
                                    <th>Constraseña</th>
                                    <th>Avatar</th>

                                </tr>
                                </thead>
                                <tbody>
                                <% data.forEach(function(data) { %>
                                    <tr>
                                        <td><%= data.user_id %></td>
                                        <td> <%= data.name %> </td>
                                        <td><%= data.email %></td>
                                        <td><%= data.user %></td>
                                        <td><%= data.password %> </td>
                                        <td><img class="border rounded-circle img-profile w30O"
                                                 src="/images/avatars/<%= data.avatar %>"</td>
                                        <td><a href="/users/delete/<%= data.user_id %>">Eliminar</a></td>
                                        <td><a href="/users/edit/<%= data.user_id %>">Editar</a></td>


                                    </tr>
                                <% }) %>

                                </tbody>
                                <tfoot>
                                <tr>
                                    <td><strong>ID</strong></td>
