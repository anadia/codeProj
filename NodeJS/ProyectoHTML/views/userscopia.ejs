    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/css/style.css' />
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="./users.ejs">CODIFICA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="./users.ejs">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>usuarios</h1>

            <form action="/users" method="post">
                <input type="text" name="name" placeholder="Nombre">
                <input type="text" name="email" placeholder="Email">
                <input type="text" name="user" placeholder="Usuario">
                <input type="text" name="password" placeholder="Password">
                <input type="text" name="avatar" placeholder="Avatar">
                <input type="submit" value="enviar">
            </form>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Contraseña</th>
                    <th scope="col">Avatar</th>

                </tr>
                </thead>
                <tbody>
                <% data.forEach(function(data) { %>
                    <tr>
                        <td scope="row"><%= data.user_id %></td>
                        <td> <%= data.name %> </td>
                        <td><%= data.email %></td>
                        <td><%= data.user %></td>
                        <td><%= data.password %> </td>
                        <td><%= data.avatar %></td>
                        <td><a href="/users/delete/<%= data.user_id %>">Eliminar</a></td>
                        <td><a href="/users/edit/<%= data.user_id %>">Editar</a></td>
                        <td><a href="/exercises/create/<%= data.user_id %>">Añadir Ejercicio</a></td>

                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>




